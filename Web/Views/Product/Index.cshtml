@model IEnumerable<ShoppingMall.DTOs.ProductDTO>

@{
    ViewData["Title"] = ViewBag.Title ?? "商品列表";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">新增商品</a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <form asp-action="Search" method="get" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="搜尋商品..." value="@ViewBag.SearchTerm">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary">搜尋</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="/images/@item.ImageUrl" class="card-img-top" alt="@item.ProductName">
                    }
                    else
                    {
                        <div class="card-img-top bg-light text-center py-5">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text text-muted">@item.CategoryName</p>
                        <p class="card-text">
                            @if (item.UnitPrice.HasValue)
                            {
                                <span class="text-danger">NT$ @item.UnitPrice.Value.ToString("N0")</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-outline-primary">詳細資訊</a>
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-outline-secondary">編輯</a>
                                <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-outline-danger">刪除</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 