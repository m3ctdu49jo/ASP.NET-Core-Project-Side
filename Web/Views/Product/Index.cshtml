@model IEnumerable<ProductDTO>

@{
    ViewData["Title"] = ViewBag.Title ?? "商品列表";
}

@section Styles {
    <style>
        input[type=number]::-webkit-outer-spin-button,
        input[type=number]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        .purch_num {
            width: 60px;
        }
        .card-footer {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }
    </style>
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <form asp-action="Search" method="get" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="搜尋商品..." value="@ViewBag.SearchTerm">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary">搜尋</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <a asp-action="Details" asp-route-id="@item.ProductID">
                            <img src="/images/@item.ImageUrl" class="card-img-top" alt="@item.ProductName">
                        </a>
                    }
                    else
                    {
                        <div class="card-img-top bg-light text-center py-5">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <a asp-action="Details" asp-route-id="@item.ProductID" class="card-title text-decoration-none fs-5">@item.ProductName</a>
                        <p class="card-text text-muted">@item.CategoryName</p>
                        <p class="card-text">
                            @if (item.UnitPrice.HasValue)
                            {
                                <span class="text-danger">NT$ @item.UnitPrice.Value.ToString("N0")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 

@section Scripts {
    <script>
    </script>
}