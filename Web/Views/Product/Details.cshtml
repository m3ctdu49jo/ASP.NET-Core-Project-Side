@model ProductDTO

@{
    ViewData["Title"] = Model.ProductName;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName">
            }
            else
            {
                <div class="bg-light rounded text-center py-5">
                    <i class="fas fa-image fa-5x text-muted"></i>
                </div>
            }
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductName</h1>
            <p class="text-muted">@Model.CategoryName</p>
            
            <div class="mb-4">
                @if (Model.UnitPrice.HasValue)
                {
                    <h3 class="text-danger">NT$ @Model.UnitPrice.Value.ToString("N0")</h3>
                }
            </div>

            <div class="mb-4">
                <h5>商品描述</h5>
                <p>@(Model.Description ?? "暫無描述")</p>
            </div>

            <div class="mb-4">
                <h5>商品資訊</h5>
                <table class="table">
                    <tr>
                        <th>供應商</th>
                        <td>@Model.SupplierName</td>
                    </tr>
                    <tr>
                        <th>庫存數量</th>
                        <td>@(Model.UnitsInStock?.ToString() ?? "0") @Model.QuantityPerUnit</td>
                    </tr>
                    <tr>
                        <th>訂購數量</th>
                        <td>@(Model.UnitsOnOrder?.ToString() ?? "0") @Model.QuantityPerUnit</td>
                    </tr>
                    <tr>
                        <th>重新訂購點</th>
                        <td>@(Model.ReorderLevel?.ToString() ?? "0") @Model.QuantityPerUnit</td>
                    </tr>
                    <tr>
                        <th>狀態</th>
                        <td>@(Model.Discontinued ? "已停售" : "販售中")</td>
                    </tr>
                </table>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">返回列表</a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary">編輯商品</a>
                    <a asp-action="Delete" asp-route-id="@Model.ProductID" class="btn btn-danger">刪除商品</a>
                </div>
            </div>
        </div>
    </div>
</div> 