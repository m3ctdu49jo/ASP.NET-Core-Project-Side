@model ShoppingMall.DTOs.ProductDTO

@{
    ViewData["Title"] = "刪除商品";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-danger">
        <h4>確定要刪除此商品嗎？</h4>
        <p>此操作無法復原。</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.ProductName</h5>
                    <p class="card-text text-muted">@Model.CategoryName</p>

                    <dl class="row">
                        <dt class="col-sm-4">商品ID</dt>
                        <dd class="col-sm-8">@Model.ProductID</dd>

                        <dt class="col-sm-4">供應商</dt>
                        <dd class="col-sm-8">@Model.SupplierName</dd>

                        <dt class="col-sm-4">單價</dt>
                        <dd class="col-sm-8">NT$ @(Model.UnitPrice?.ToString("N0") ?? "0")</dd>

                        <dt class="col-sm-4">庫存數量</dt>
                        <dd class="col-sm-8">@(Model.UnitsInStock?.ToString() ?? "0") @Model.QuantityPerUnit</dd>

                        <dt class="col-sm-4">狀態</dt>
                        <dd class="col-sm-8">@(Model.Discontinued ? "已停售" : "販售中")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="ProductID" />
                <input type="submit" value="確定刪除" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-outline-secondary">返回列表</a>
            </form>
        </div>
    </div>
</div> 