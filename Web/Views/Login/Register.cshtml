@model UserDTO
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
@if(ViewBag.ErrorMsg != null)
{
    <div style="color: red;">
        @ViewBag.ErrorMsg
    </div>
}
<form method="post" asp-action="Register" asp-controller="Login">
    <div>
        *<label asp-for="UserName"></label>
        <input type="text" asp-for="UserName" required />
    </div>
    <div>
        *<label asp-for="Password"></label>
        <input type="password" asp-for="Password" required />
    </div>
    <div>
        *<label for="confirmPassword">確認密碼</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required />
    </div>
    <div>
        *<label asp-for="Name"></label>
        <input type="text" asp-for="Name" required />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" />
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input type="tel" asp-for="Phone" />
    </div>
    <div>
        <label asp-for="Country"></label>
        <input type="text" asp-for="Country" />
    </div>
    <div>
        <label asp-for="City"></label>
        <input type="text" asp-for="City" />
    </div>
    <div>
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" />
    </div>
    <div>
        <input type="submit" value="註冊" />
        <input type="reset" value="重設" />
    </div>
</form>
