@model UserDTO
@{
    ViewData["Title"] = "會員註冊";
}

@await Html.PartialAsync("Ordinary/_TitlePartial", ViewData["Title"])
@if(ViewBag.ErrorMsg != null)
{
    <div style="color: red;">
        @ViewBag.ErrorMsg
    </div>
}
<form method="post" asp-action="Register" asp-controller="Login">
    <div class="mb-2">
        *<label asp-for="UserName"></label>
        <styled-input type="text" asp-for="UserName" placeholder="帳號" required=true></styled-input>
    </div>
    <div class="mb-2">
        *<label asp-for="Password"></label>
        <styled-input type="password" asp-for="Password" required=true></styled-input>
    </div>
    <div class="mb-2">
        *<label for="confirmPassword">確認密碼</label>
        <styled-input type="password" asp-for="ConfirmPassword" required=true></styled-input>
    </div>
    <div class="mb-2">
        *<label asp-for="Name"></label>
        <styled-input type="text" asp-for="Name" required=true></styled-input>
    </div>
    <div class="mb-2">
        <label asp-for="Email"></label>
        <styled-input type="email" asp-for="Email"></styled-input>
    </div>
    <div class="mb-2">
        <label asp-for="Phone"></label>
        <styled-input type="tel" asp-for="Phone"></styled-input>
    </div>
    <div class="mb-2">
        <label asp-for="Country"></label>
        <styled-input type="text" asp-for="Country"></styled-input>
    </div>
    <div class="mb-2">
        <label asp-for="City"></label>
        <styled-input type="text" asp-for="City"></styled-input>
    </div>
    <div class="mb-2">
        <label asp-for="Address"></label>
        <styled-input type="text" asp-for="Address"></styled-input>
    </div>
    <div class="mb-2">
        <input type="submit" value="註冊" class="btn btn-primary" />
        <input type="reset" value="重設" class="btn btn-secondary" />
    </div>
</form>
