@model UserDTO
@{
    ViewData["Title"] = "會員註冊";
}

@await Html.PartialAsync("Ordinary/_TitlePartial", ViewData["Title"])
@if(ViewBag.ErrorMsg != null)
{
    <div style="color: red;">
        @ViewBag.ErrorMsg
    </div>
}
<form method="post" asp-action="Register" asp-controller="Login">
    <div class="mb-2">
        *<label asp-for="UserName"></label>
        <styled-input type="text" asp-for="UserName" placeholder="帳號"></styled-input>
        <input type="text" asp-for="UserName" class="px-2 py-1 rounded-3 border-secondary border-1" required />
    </div>
    <div class="mb-2">
        *<label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="px-2 py-1 rounded-3 border-secondary border-1" required />
    </div>
    <div class="mb-2">
        *<label for="confirmPassword">確認密碼</label>
        <input type="password" name="confirmPassword" id="confirmPassword" class="px-2 py-1 rounded-3 border-secondary border-1" required />
    </div>
    <div class="mb-2">
        *<label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="px-2 py-1 rounded-3 border-secondary border-1" required />
    </div>
    <div class="mb-2">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="px-2 py-1 rounded-3 border-secondary border-1" />
    </div>
    <div class="mb-2">
        <label asp-for="Phone"></label>
        <input type="tel" asp-for="Phone" class="px-2 py-1 rounded-3 border-secondary border-1" />
    </div>
    <div class="mb-2">
        <label asp-for="Country"></label>
        <input type="text" asp-for="Country" class="px-2 py-1 rounded-3 border-secondary border-1" />
    </div>
    <div class="mb-2">
        <label asp-for="City"></label>
        <input type="text" asp-for="City" class="px-2 py-1 rounded-3 border-secondary border-1" />
    </div>
    <div class="mb-2">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="px-2 py-1 rounded-3 border-secondary border-1" />
    </div>
    <div class="mb-2">
        <input type="submit" value="註冊" class="btn btn-primary" />
        <input type="reset" value="重設" class="btn btn-secondary" />
    </div>
</form>
